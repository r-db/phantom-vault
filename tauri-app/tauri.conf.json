{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vault Secrets",
  "version": "0.1.0",
  "identifier": "com.vault-secrets.app",
  "build": {
    "beforeDevCommand": "cd ../flutter-ui && flutter run -d web-server --web-port 3000",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../flutter-ui && flutter build web",
    "frontendDist": "../flutter-ui/build/web"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vault Secrets",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "category": "Utility",
    "shortDescription": "Secure credential management for LLM tools",
    "longDescription": "Vault Secrets provides secure credential storage with MCP integration for Claude Code. Credentials are never exposed to LLMs - only symbolic references are used.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
